{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@routes/*": ["routes/*"],
      "@shared/*": ["shared/*"],
      "@modules/*": ["modules/*"],
      "@database/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  }
}